{
  "name": "english-optimizer-cli",
  "version": "1.0.3",
  "description": "CLI tool to help non-native English speakers improve their writing using AI",
  "main": "dist/index.js",
  "bin": {
    "fuck-abc": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "watch": "tsc --watch",
    "install-config": "node scripts/install-config.js",
    "version": "node scripts/bump-version.js",
    "release:patch": "npm version patch && git push && git push --tags",
    "release:minor": "npm version minor && git push && git push --tags",
    "release:major": "npm version major && git push && git push --tags"
  },
  "keywords": [
    "cli",
    "english",
    "learning",
    "ai",
    "optimizer"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "chalk": "^5.3.0",
    "cli-cursor": "^4.0.0",
    "clipboardy": "^3.0.0",
    "commander": "^12.0.0",
    "diff": "^5.1.0",
    "dotenv": "^16.3.0",
    "inquirer": "^9.2.0",
    "js-yaml": "^4.1.0",
    "keypress": "^0.2.1",
    "ora": "^8.0.0",
    "uuid": "^9.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/diff": "^5.0.0",
    "@types/inquirer": "^9.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
